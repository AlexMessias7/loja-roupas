<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados da Pesquisa</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <!-- Cabeçalho -->
    <header>
        <div class="container">
            <img src="/images/logo.png" alt="Logo" class="logo">
            <img src="/images/logo 1.png" alt="Logo_1" class="logo_1">
            <div class="barra-pesquisa" role="search">
            <input type="text" id="search-input" placeholder="O que você está procurando?" aria-label="Pesquisar produtos">
            <i class="fa fa-search" id="search-btn" aria-label="Botão de pesquisa"></i>
            <p id="search-feedback" style="display:none;"></p>
            </div>

            <div class="menu-navegacao">
            <nav>
                <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/produtos">Produtos</a></li>
                <li><a href="/favoritos">Favoritos</a></li>
                <li><a href="/promocoes">Promoções</a></li>
                <li><a href="/area-cliente">Minha Área</a></li>

                <% if (clienteLogado) { %>
                    <li><a href="/logout-cliente">Sair</a></li>
                <% } else { %>
                    <li><a href="/login-cliente">Login</a></li>
                <% } %>

                <div class="carrinho-container">
                    <i id="cartIcon" class="fa fa-shopping-cart"></i>
                </div>
                </ul>
            </nav>
            </div>
    </header>

    <main>
        <!-- Container exclusivo para resultados -->
        <div class="container-resultados">
            <h2>Resultados para "<%= query %>"</h2>

            <!-- Filtros estilizados -->
            <div class="filtros-container">
                <h3>Ordenar por:</h3>
                <div class="filtros-botoes">
                    <a href="/resultados?q=<%= query %>&ordenar=relevancia" class="btn-filtro">
                        <i class="fa fa-star"></i> Mais relevantes
                    </a>
                    <a href="/resultados?q=<%= query %>&ordenar=preco-asc" class="btn-filtro">
                        <i class="fa fa-arrow-down"></i> Menor Preço
                    </a>
                    <a href="/resultados?q=<%= query %>&ordenar=preco-desc" class="btn-filtro">
                        <i class="fa fa-arrow-up"></i> Maior Preço
                    </a>
                </div>
            </div>

            <div class="produtos" id="resultados">
                <% if (results.length > 0) { %>
                    <% results.forEach(function(product) { %>
                        <div class="produto-item">
                            <a href="/produto/<%= product._id %>">
                                <img src="<%= product.image %>" alt="Imagem do produto <%= product.name %>">
                            </a>

                            <!-- Botão de favorito -->
                            <button class="favorito-btn-imagem favorito-inicial" 
                                    data-id="<%= product._id %>" 
                                    aria-label="Adicionar aos favoritos">
                                <i class="fa fa-heart"></i>
                            </button>

                            <h3><%= product.name %></h3>

                            <% if (product.originalPrice) { %>
                                <p class="preco-original">R$ <%= product.originalPrice.toFixed(2) %></p>
                            <% } %>

                            <% if (product.discountedPrice) { %>
                                <p class="preco-desconto">R$ <%= product.discountedPrice.toFixed(2) %></p>
                            <% } %>

                            <% if (product.maxInstallments && product.installmentValue) { %>
                                <p class="parcelamento">ou em até <%= product.maxInstallments %>x de R$ <%= product.installmentValue.toFixed(2) %></p>
                            <% } %>

                            <!-- Botão Ver Mais padronizado -->
                            <a href="/produto/<%= product._id %>" class="btn ver-mais-btn">
                                <i class="fa fa-eye" aria-hidden="true"></i> Ver Mais
                            </a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="sem-resultados">
                        <p>Nenhum produto encontrado para "<%= query %>".</p>
                        <a href="/produtos" class="btn explorar-btn">
                            <i class="fa fa-search"></i> Explorar todos os produtos
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 CREED GODS. Todos os direitos reservados.</p>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/sobre">Sobre</a></li>
                    <li><a href="/politica-de-privacidade">Política de Privacidade</a></li>
                    <li><a href="/termos-de-uso">Termos de Uso</a></li>
                    <li><a href="/contato">Contato</a></li>
                </ul>
            </nav>
        </div>
    </footer>

    <script src="/search.js"></script>
    <script src="/favorito.js"></script>
</body>
</html>